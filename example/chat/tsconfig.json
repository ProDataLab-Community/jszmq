{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "paths": {
      "lib/*": ["lib/*"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths", "exclude": ["*"] }
    ],
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  },
  "exclude": ["**/*.d.ts", "./lib", "node_modules"]
}
